generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection - might be needed for PROD
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id                    Int                    @id @default(autoincrement())
  name                  String
  email                 String                 @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  role                  UserRole               @default(USER)
  accounts              Account[]
  createdAt             DateTime               @default(now()) @map(name: "created_at")
  updatedAt             DateTime               @default(now()) @map(name: "updated_at")
  StudySession          StudySession[]
  isTwoFactorEnabled    Boolean                @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  CloudinaryConfig      CloudinaryConfig?

  @@map(name: "users")
}

// Account model represents a table used to store third-party authentication provider data (social login) 
model Account {
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

// VerificationToken model represents a table used to store email verification tokens
model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// PasswordResetToken model used for password reset token
model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// TwoFactorToken model will temporarily store the two-factor authentication token
model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// TwoFactorConfirmation model will temporarily store the status of two-factor authentication for a user
// If a record exists for a user, it means that the user has successfully validated the two-factor authentication token
model TwoFactorConfirmation {
  id     String @id @default(cuid())
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StudySession {
  id            Int      @id @default(autoincrement())
  startTime     DateTime
  endTime       DateTime
  userId        Int
  pauseDuration Int
  createdAt     DateTime @default(now()) @map(name: "created_at")
  updatedAt     DateTime @default(now()) @map(name: "updated_at")

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic   Topic[]
  feeling Feeling?

  @@map(name: "sessions")
}

model Topic {
  id          Int      @id @default(autoincrement())
  sessionId   Int
  description String?
  title       String
  hashtags    String?
  timeOfStudy Int
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")
  contentJson Json?

  studySession StudySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map(name: "topics")
}

model Feeling {
  id          Int      @id @default(autoincrement())
  sessionId   Int      @unique
  description String
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  studySession StudySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map(name: "feelings")
}

model CloudinaryConfig {
  id        Int      @id @default(autoincrement())
  cloudName String
  apiKey    String
  apiSecret String
  iv        String // Base64 encoded initialization vector for the encryption
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map(name: "cloudinary_configs")
}
