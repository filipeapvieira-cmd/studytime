model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now()) @map(name: "created_at")
  updatedAt    DateTime       @default(now()) @map(name: "updated_at")
  StudySession StudySession[]

  @@map(name: "users")
}

model StudySession {
  id            Int      @id @default(autoincrement())
  startTime     DateTime
  endTime       DateTime
  userId        Int
  pauseDuration Int
  createdAt     DateTime @default(now()) @map(name: "created_at")
  updatedAt     DateTime @default(now()) @map(name: "updated_at")

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic   Topic[]
  feeling Feeling?

  @@map(name: "sessions")
}

model Topic {
  id          Int      @id @default(autoincrement())
  sessionId   Int
  description String
  title       String
  hashtags    String?
  timeOfStudy Int
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  studySession StudySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map(name: "contents")
}

model Feeling {
  id          Int      @id @default(autoincrement())
  sessionId   Int      @unique
  description String
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  studySession StudySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map(name: "feelings")
}
